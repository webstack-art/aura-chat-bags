# Django Backend API Configuration
VITE_API_BASE_URL=http://127.0.0.1:8000/api/

# Production API URL (uncomment and update for production)
# VITE_API_BASE_URL=https://your-production-api.com/api/

# API Timeout (in milliseconds)
VITE_API_TIMEOUT=10000

# App Configuration
VITE_APP_NAME=Aurabags
VITE_APP_VERSION=1.0.0

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880 # 5MB in bytes
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Payment Configuration (if using)
# VITE_STRIPE_PUBLIC_KEY=your_stripe_public_key
# VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Analytics (if using)
# VITE_GA_TRACKING_ID=your_google_analytics_id

# Feature Flags
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_NOTIFICATIONS=true
